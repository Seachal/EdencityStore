<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/blue_code"
    android:layout_height="match_parent"
    tools:context=".home.activity.ReceiveMoneyCodeActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:paddingHorizontal="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_14"
            app:layout_constraintBottom_toTopOf="@+id/view11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/umeng_socialize_back_icon" />

        <View
            android:id="@+id/view11"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.edencity.store.custum.MyMediumTextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款码"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toTopOf="@+id/view11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/stroke_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5">

        <RelativeLayout
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_280"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <ImageView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@mipmap/leftt" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@mipmap/rightt" />

            <RelativeLayout
                android:layout_width="@dimen/dp_210"
                android:layout_height="@dimen/dp_210"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:padding="@dimen/dp_10"
                android:background="@drawable/code_bg">

                <ImageView
                    android:id="@+id/code"
                    android:layout_width="@dimen/dp_210"
                    android:layout_height="@dimen/dp_210"
                    />
            </RelativeLayout>

            <com.edencity.store.custum.MyMediumTextView
                android:id="@+id/shop_name"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </RelativeLayout>

        <com.edencity.store.custum.MyMediumTextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:background="#ABCBF5"
            android:gravity="center"
            android:text="收款码"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#f5f5f5"
            app:layout_constraintBottom_toTopOf="@+id/download"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.edencity.store.custum.MyNormalTextView
            android:id="@+id/download"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="下载"
            android:textColor="#666666"
            android:paddingBottom="@dimen/dp_3"
            android:textSize="@dimen/sp_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_32"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout7"
        app:srcCompat="@mipmap/receive_code" />

    <ImageView
        android:id="@+id/btn_pay_code"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_32"
        android:layout_marginEnd="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:srcCompat="@mipmap/pay_code_png" />

    <com.edencity.store.custum.MyMediumTextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="收款码"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <com.edencity.store.custum.MyMediumTextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="付款码"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/btn_pay_code"
        app:layout_constraintStart_toStartOf="@+id/btn_pay_code"
        app:layout_constraintTop_toBottomOf="@+id/btn_pay_code" />
</android.support.constraint.ConstraintLayout>