<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.edencity.store.custum.RoundImageView4dp
                android:id="@+id/item_iv"
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/will_state_end"
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:background="#90eaeaea"
                android:visibility="visible">

                <com.edencity.store.custum.MyMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@drawable/will_join"
                    android:gravity="center"
                    android:text="已结束"
                    android:paddingHorizontal="@dimen/dp_12"
                    android:paddingVertical="@dimen/dp_4"
                    android:drawablePadding="@dimen/dp_3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/will_state_end2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:visibility="gone">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="@dimen/dp_90"
                    android:layout_centerInParent="true"
                    android:background="@drawable/upup"
                    android:gravity="center" />

            </RelativeLayout>

            <com.edencity.store.custum.MyMediumTextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_iv"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:text=""
                android:textColor="@color/blue_nomal"
                android:textSize="16sp"
                 />
            <com.edencity.store.custum.MyNormalTextView
                android:id="@+id/tv_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_title"
                android:layout_alignLeft="@id/item_title"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableLeft="@mipmap/name"
                android:drawablePadding="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="#333333"
                android:textSize="11sp" />
            <com.edencity.store.custum.MyNormalTextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_shop"
                android:layout_alignLeft="@id/item_title"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableLeft="@mipmap/time"
                android:drawablePadding="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="#333333"
                android:textSize="11sp" />

            <com.edencity.store.custum.MyNormalTextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_time"
                android:layout_alignLeft="@id/item_title"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableLeft="@mipmap/address"
                android:drawablePadding="@dimen/dp_5"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/dp_16"
                android:maxLines="1"
                android:text=""
                android:textColor="#333333"
                android:textSize="11sp" />

            <com.edencity.store.custum.MyNormalTextView
                android:id="@+id/will_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_32"
                android:background="@drawable/will_join"
                android:paddingHorizontal="@dimen/dp_12"
                android:paddingVertical="@dimen/dp_4"
                android:text="报名中"
                android:drawablePadding="@dimen/dp_3"
                android:textColor="@color/blue_nomal"
                android:textSize="@dimen/sp_12" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_below="@id/tv_address"
                android:background="#f5f5f5"/>
        </RelativeLayout>


</RelativeLayout>