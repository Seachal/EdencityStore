<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".login.activity.RegisterActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="16dp"
        android:paddingVertical="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_black" />

    <TextView
        android:id="@+id/tab_amout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:text="注册"
        android:textColor="@color/blue_nomal"
        android:textSize="@dimen/sp_20"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tab_amout"
        tools:layout_editor_absoluteX="164dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"

            android:paddingHorizontal="@dimen/dp_22">

            <TextView
                android:id="@+id/phone"
                android:layout_width="@dimen/dp_100"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="手机号"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/phone"
                android:background="@null"
                android:hint="输入手机号"
                android:maxLength="11"
                android:textSize="@dimen/sp_15" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cecece" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_22">

            <TextView
                android:id="@+id/verify"
                android:layout_width="@dimen/dp_100"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="验证码"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/et_verify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/verify"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入短信验证码"
                android:maxLength="4"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/getVerify"
                android:text="获取验证码"
                android:textSize="@dimen/sp_13"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:paddingHorizontal="@dimen/dp_12"
                android:paddingVertical="@dimen/dp_6"
                android:background="@drawable/bg_tv_conner10_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginHorizontal="@dimen/dp_22"
            android:layout_alignParentBottom="true"
            android:background="#cecece" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:paddingHorizontal="@dimen/dp_22">

            <TextView
                android:id="@+id/tv_pwd"
                android:layout_width="@dimen/dp_100"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:gravity="center_vertical"
                android:text="密码"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_pwd"
                android:background="@null"
                android:digits="@string/register_name_"
                android:hint="6~16位含数字、字母"
                android:maxLength="16"
                android:textSize="@dimen/sp_15" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cecece" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:paddingHorizontal="@dimen/dp_22">

            <TextView
                android:id="@+id/sure_pwd"
                android:layout_width="@dimen/dp_100"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="确认密码"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/et_confim_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/sure_pwd"
                android:background="@null"
                android:digits="@string/register_name_"
                android:hint="6~16位含数字、字母"
                android:maxLength="16"
                android:textSize="@dimen/sp_15" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cecece" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:paddingHorizontal="@dimen/dp_22">


                <!--android:background="@drawable/drawable_checkbox_agreement"-->
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomCheckboxTheme"
                android:id="@+id/cb"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/cb"
                android:text="我已阅读并同意"
                android:textColor="#666666"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_agreeement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv"
                android:text="《商家入驻合作协议》"
                android:textColor="@color/blue_nomal"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_agreeement2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_agreeement"
                android:text="和"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_agreeement3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_agreeement2"
                android:text="《商户隐私协议》"
                android:textColor="@color/blue_nomal"
                android:textSize="10sp" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/register"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/text_bg_blue"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_50"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:visibility="gone"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号？"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/go_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去登录？"
            android:textColor="@color/blue_nomal"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>