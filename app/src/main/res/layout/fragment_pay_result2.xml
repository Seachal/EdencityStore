<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".base.PayResultFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_120"
        android:layout_marginTop="120dp"
        android:src="@drawable/pay_suceese_png"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pay_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/pay_succese"
        android:textColor="#30D8CC"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="另送您200伊甸币及xx点活跃值"
        android:textColor="#30D8CC"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/pay_type"
        app:layout_constraintStart_toStartOf="@+id/pay_type"
        app:layout_constraintTop_toBottomOf="@+id/pay_type" />

    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="36dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/text_bg_blue"
        android:gravity="center"
        android:text="好的"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/go_to_setpwd" />

    <TextView
        android:id="@+id/go_to_setpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#FE6A5D"
        android:drawableLeft="@mipmap/red_password"
        android:drawablePadding="4dp"
        android:textSize="@dimen/sp_12"
        android:text="为保证您的资金安全，请设置支付密码.  去设置>>"
        app:layout_constraintEnd_toEndOf="@+id/desc"
        app:layout_constraintStart_toStartOf="@+id/desc"
        app:layout_constraintTop_toBottomOf="@+id/desc" />
</android.support.constraint.ConstraintLayout>