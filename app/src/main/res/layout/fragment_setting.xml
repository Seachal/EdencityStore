<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:paddingTop="@dimen/statusbar_height"
        android:background="@color/white">
        <ImageButton
            android:id="@+id/btn_back"
            android:onClick="onViewItemClicked"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_black"
            android:background="@color/clear"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="49dp"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        android:layout_height="@dimen/dp_10"/>
    <LinearLayout
        android:id="@+id/layout_feedback"
        android:clickable="true"
        android:onClick="onViewItemClicked"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.edencity.store.custum.MyMediumTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="账号管理"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_marginHorizontal="@dimen/dp_16"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.edencity.store.custum.MyNormalTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="登录账号"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <com.edencity.store.custum.MyNormalTextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:onClick="onViewItemClicked"
            android:text="130****1241"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />
        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/next"
            />
    </LinearLayout>

    <LinearLayout
        android:clickable="true"
        android:onClick="onViewItemClicked"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.edencity.store.custum.MyNormalTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="登录密码"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <com.edencity.store.custum.MyNormalTextView
            android:id="@+id/pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:onClick="onViewItemClicked"
            android:text="修改"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />
        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/next"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        android:layout_height="@dimen/dp_10"/>

    <LinearLayout
        android:clickable="true"
        android:onClick="onViewItemClicked"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.edencity.store.custum.MyMediumTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="支付管理"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_marginHorizontal="@dimen/dp_16"/>
    <LinearLayout
        android:clickable="true"
        android:onClick="onViewItemClicked"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.edencity.store.custum.MyNormalTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="支付密码"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <com.edencity.store.custum.MyNormalTextView
            android:id="@+id/paypwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:onClick="onViewItemClicked"
            android:text="修改"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />
        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/next"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        android:layout_height="@dimen/dp_10"/>
    <LinearLayout
        android:clickable="true"
        android:onClick="onViewItemClicked"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.edencity.store.custum.MyMediumTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="系统版本"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_marginHorizontal="@dimen/dp_16"/>
    <LinearLayout
        android:clickable="true"
        android:onClick="onViewItemClicked"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.edencity.store.custum.MyNormalTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="关于"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <com.edencity.store.custum.MyNormalTextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:text="版本号V1.0"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        android:layout_height="@dimen/dp_10"/>

    <com.edencity.store.custum.MyMediumTextView
        android:id="@+id/btn_quit"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="onViewItemClicked"
        android:paddingLeft="20dp"
        android:text="退出登录"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_16" />
    <View
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        android:layout_height="@dimen/dp_10"/>

</LinearLayout>