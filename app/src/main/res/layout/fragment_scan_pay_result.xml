<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/succeed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="支付成功"
        android:textSize="16sp"
        android:textColor="#39ca49"/>

    <TextView
        android:id="@+id/text_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="¥ 1.00"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/text_black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="收款方"
        android:textSize="14sp"
        android:textColor="@color/text_gray"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_store"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_logo"/>

    <TextView
        android:id="@+id/text_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="海底捞（伊甸城店）"
        android:textSize="16sp"
        android:textColor="@color/text_black"/>

    <View android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/btn_ok"
        android:onClick="onViewItemClicked"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_button_scan_pay_success"
        android:text="完成"
        android:textColor="#39ca49"/>
</LinearLayout>